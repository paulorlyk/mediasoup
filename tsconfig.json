{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "node/lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["node/src"],
	"watchOptions": {
		"watchFile": "useFsEvents",
		"watchDirectory": "useFsEvents",
		"fallbackPolling": "dynamicPriority",
		"synchronousWatchDirectory": true
	}
}
